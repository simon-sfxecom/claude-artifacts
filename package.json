{
  "name": "claude-artifacts",
  "displayName": "Claude Artifacts",
  "description": "Live preview of Claude Code plan files with Mermaid diagram support",
  "version": "0.1.0",
  "publisher": "sfx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/simon-sfxecom/claude-artifacts.git"
  },
  "homepage": "https://github.com/simon-sfxecom/claude-artifacts#readme",
  "bugs": {
    "url": "https://github.com/simon-sfxecom/claude-artifacts/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-artifacts",
          "title": "Claude Artifacts",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "claude-artifacts": [
        {
          "id": "claudeArtifacts.sessionInbox",
          "name": "Sessions"
        },
        {
          "type": "webview",
          "id": "claudeArtifacts.artifactView",
          "name": "Plan Preview"
        }
      ]
    },
    "commands": [
      {
        "command": "claudeArtifacts.refresh",
        "title": "Refresh Artifact View",
        "category": "Claude Artifacts",
        "icon": "$(refresh)"
      },
      {
        "command": "claudeArtifacts.openPlanFile",
        "title": "Open Current Plan File",
        "category": "Claude Artifacts",
        "icon": "$(go-to-file)"
      },
      {
        "command": "claudeArtifacts.openInTab",
        "title": "Open Artifact in Tab",
        "category": "Claude Artifacts",
        "icon": "$(open-preview)"
      },
      {
        "command": "claudeArtifacts.approve",
        "title": "Approve Plan (Bypass)",
        "category": "Claude Artifacts"
      },
      {
        "command": "claudeArtifacts.approveManual",
        "title": "Approve Plan (Manual)",
        "category": "Claude Artifacts"
      },
      {
        "command": "claudeArtifacts.sendFeedback",
        "title": "Send Feedback to Claude",
        "category": "Claude Artifacts"
      },
      {
        "command": "claudeArtifacts.refreshSessions",
        "title": "Refresh Sessions",
        "category": "Claude Artifacts",
        "icon": "$(refresh)"
      },
      {
        "command": "claudeArtifacts.resumeSession",
        "title": "Resume Session",
        "category": "Claude Artifacts",
        "icon": "$(debug-start)"
      },
      {
        "command": "claudeArtifacts.showSessionDetails",
        "title": "Show Session Details",
        "category": "Claude Artifacts"
      },
      {
        "command": "claudeArtifacts.viewWalkthrough",
        "title": "View Session Summary",
        "category": "Claude Artifacts",
        "icon": "$(book)"
      },
      {
        "command": "claudeArtifacts.saveWalkthrough",
        "title": "Save Session Summary",
        "category": "Claude Artifacts",
        "icon": "$(save)"
      },
      {
        "command": "claudeArtifacts.newWorktreeSession",
        "title": "New Session in Worktree",
        "category": "Claude Artifacts",
        "icon": "$(git-branch)"
      },
      {
        "command": "claudeArtifacts.listWorktrees",
        "title": "List Worktrees",
        "category": "Claude Artifacts"
      },
      {
        "command": "claudeArtifacts.removeWorktree",
        "title": "Remove Worktree",
        "category": "Claude Artifacts"
      }
    ],
    "keybindings": [
      {
        "command": "claudeArtifacts.approve",
        "key": "ctrl+shift+1",
        "mac": "cmd+shift+1"
      },
      {
        "command": "claudeArtifacts.approveManual",
        "key": "ctrl+shift+2",
        "mac": "cmd+shift+2"
      },
      {
        "command": "claudeArtifacts.sendFeedback",
        "key": "ctrl+shift+3",
        "mac": "cmd+shift+3"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "claudeArtifacts.openInTab",
          "when": "view == claudeArtifacts.artifactView",
          "group": "navigation"
        },
        {
          "command": "claudeArtifacts.refresh",
          "when": "view == claudeArtifacts.artifactView",
          "group": "navigation"
        },
        {
          "command": "claudeArtifacts.refreshSessions",
          "when": "view == claudeArtifacts.sessionInbox",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "claudeArtifacts.resumeSession",
          "when": "view == claudeArtifacts.sessionInbox && viewItem =~ /^session-/",
          "group": "inline"
        },
        {
          "command": "claudeArtifacts.viewWalkthrough",
          "when": "view == claudeArtifacts.sessionInbox && viewItem =~ /^session-/",
          "group": "session@1"
        },
        {
          "command": "claudeArtifacts.saveWalkthrough",
          "when": "view == claudeArtifacts.sessionInbox && viewItem =~ /^session-/",
          "group": "session@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.1.7",
    "marked": "^12.0.0"
  }
}
